<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="5dp"
    >


    <TextView
        android:id="@+id/my_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="3dp"
        />

    <!--deadline -->
    <TextView
        android:id="@+id/my_task_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_task_title"
        android:layout_alignLeft="@id/my_task_title"
        android:drawableLeft="@drawable/ic_task_alarm"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"/>


    <!--comment -->
    <TextView
        android:id="@+id/my_task_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/my_task_deadline"
        android:layout_below="@id/my_task_title"
        android:drawableLeft="@drawable/icon_comment"
        android:drawablePadding="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        />

    <!--project -->
    <TextView
        android:id="@+id/my_task_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/my_task_comment"
        android:layout_below="@id/my_task_title"
        android:drawableLeft="@drawable/ic_task_projeect"
        android:drawablePadding="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        />




    <TextView

        android:id="@+id/my_task_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <!--android:drawableLeft="@drawable/icon_check_list"-->


</RelativeLayout>