<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bm.com.graduationproject.teamtarget.DiaryActivity">

    <TextView
        android:id="@+id/diary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最新动态"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_marginLeft="@dimen/fragment_margin_left"
        android:layout_marginTop="20dp"/>

    <!--separating line -->
    <ImageView
        android:id="@+id/diary_separate_line"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/diary_title"/>



    <!--List of the today task list -->
    <ListView
        android:id="@+id/diary_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="2px"

        android:headerDividersEnabled="true"
        android:footerDividersEnabled="false"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/diary_separate_line"
        >

    </ListView>

</RelativeLayout>
